<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E2E2E2"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp" >
    
    <TextView 
        style="@style/headerText"
        android:id="@+id/imgHIGHeader"
        android:text="@string/imgHIGHeaderText"
        />
    
    <View
        style="@style/divider"
        android:id="@+id/imgHIGDiv"
        android:layout_below="@+id/imgHIGHeader"
        />
    
    <TextView
        style="@style/regularText"
        android:id="@+id/imgURLinfo"
        android:text="@string/imgInfoText"
        android:layout_below="@id/imgHIGDiv"
        />
    
    <ImageView 
        android:id="@+id/imgHIGimage"
        android:layout_below="@id/imgURLinfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        />
</RelativeLayout>